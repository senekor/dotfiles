[advice]
	detachedHead = false
[checkout]
	defaultRemote = origin
[clean]
	requireForce = false
[diff]
	tool = difftastic
	submodule = log
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[fetch]
	prune = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[init]
	defaultBranch = main
[pager]
	difftool = true
[pull]
	rebase = true
	ff = only
[push]
	autoSetupRemote = true
	recurseSubmodules = on-demand
[rebase]
	autoSquash = true
	autoStash = true
[rerere]
	enabled = true
[submodule]
	recurse = true
# This allows submodules to have https urls so anyone can easily download them.
# Users who only want to fetch with ssh can still do that with this config.
[url "ssh://git@"]
	pushInsteadOf = https://
[user]
	name = Remo Senekowitsch
	email = remo@buenzli.dev

[alias]
	st = status --short
	f = fetch --all
	l = "!f() { git log --oneline --graph "$@" || true ; }; f"
	g = "!f() { git log --oneline --graph --branches='*' --remotes='*' "$@" || true ; }; f"

	au = add --update
	aa = add --all
	ap = add --patch
	ai = add --interactive

	c = commit
	cm = "!f() { echo "$@" | git commit --file=- ; }; f"
	ca = commit --amend
	cane = commit --amend --no-edit
	cf = commit --fixup

	ch = checkout
	chb = checkout -b
	chd = checkout --detach

	p = push
	pf = push --force-with-lease

	bd = branch --delete --force

	r = rebase
	ri = rebase --interactive
	rc = rebase --continue
	ra = rebase --abort

	m = merge
	mc = merge --continue
	ma = merge --abort

	crp = cherry-pick
	crpc = cherry-pick --continue
	crpa = cherry-pick --abort

	rs = reset
	rsh = reset --hard
	rslc = reset HEAD^

	dt = difftool
	dts = difftool --staged

	cge = config --global --edit
